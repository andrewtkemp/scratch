{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5"
    },
    "include": [
      "./src/**/**/*", "typings/*"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.spec.*",
      "build",
      "scripts",
      "webpack",
      "src/setupTests.ts"
    ]
  }